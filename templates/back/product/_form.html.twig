<div class="row col-12">
    <div class="col-12 col-lg-4">
        <img src="{{ asset(product.picture) }}" alt="Image de {{ product.name}}" style="max-width: 200px;" class="mx-auto d-block" id="product_imageUrl">
        <img src="{{ asset(product.thumbnail) }}" alt="Thumbnail de {{ product.name}}" style="max-width: 200px;" class="mx-auto d-block" id="product_thumbnailUrl">
    </div>
    <div class="col-12 col-lg-8 border-left">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}
    </div>
</div>

<script type="text/javascript">
    document.querySelector('[type="file"]')
        .addEventListener('change', function(e) {
            e.currentTarget.closest('.custom-file').querySelector('label').textContent += e.currentTarget.value;
        })
</script>