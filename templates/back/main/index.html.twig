{% for marker in markers %}    
<script>
    marker = "{{ marker.location|json_encode|trim('\"') }}".split(', ');
    ordersNumber = "{{ marker.ordersNumber }}";
    
    L.circle(marker, {
        color: 'red',
        fillColor: '#f03',
        fillOpacity: 0.5,
