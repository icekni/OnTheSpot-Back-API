{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

<h1>Hello, world!</h1>

<div id="map" style="width: 100%; height: 400px;"></div>

{% if orders is defined %}
<h1 class="mt-3 pt-3 border-top">Commandes pour {{ deliveryPoint.name }}</h1>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Statut</th>
            <th>Heure de livraison</th>
            <th>Point de RDV</th>
            <th>Client</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for order in orders|sort((b, a) => a.deliveryTime <=> b.deliveryTime) %}
        <tr>
            <td>{{ order.id }}</td>
            <td>
                {% if order.status == 0 %}En attente{% endif %}
                {% if order.status == 1 %}En préparation{% endif %}
                {% if order.status == 2 %}En livraison{% endif %}
                {% if order.status == 3 %}Livrée{% endif %}
            </td>
            <td class="position-relative"><a href="{{ path('order_show', {'id': order.id}) }}" class="stretched-link">{{ order.deliveryTime|date("d-m-Y - H:i") }}</td><a></td>
            <td>{{ order.deliveryPoint.city.name }} - {{ order.deliveryPoint.name }}</td>
            <td>{{ order.user.firstname }} {{ order.user.lastname }}</td>
            <td class="d-flex">
                <a type="button" href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-warning"><i class="far fa-edit"></i></a>
                
                <div class="dropdown mx-2">
                    <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="far fa-trash-alt"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="{{ path('order_delete', {'id': order.id}) }}">Confirmer</a>
                        <a class="dropdown-item" href="#">Annuler</a>
                    </div>
                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="10">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endif %}

