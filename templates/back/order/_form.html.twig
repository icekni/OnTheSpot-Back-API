{{ form_start(form, {attr: {class: ' row'}}) }}
    {# {{ form_widget(form) }} #}

    <div class="col-12 col-lg-6">

        <table class="table table-borderless border-left">
            <thead>
                <tr>
                    <th>Produits</th>
                    <th>Quantit√©</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% set total = 0 %}
                {% for orderLine in form.orderProducts %}
                <tr class="order-line">
                    <td>
                        {{ form_errors(orderLine.product) }}
                        {{ form_widget(orderLine.product) }}
                        {{ form_help(orderLine.product) }}
                    </td>
                    <td>
                        {{ form_errors(orderLine.quantity) }}
                        {{ form_widget(orderLine.quantity) }}
                        {{ form_help(orderLine.quantity) }}
                    </td>
                    <td>
                        <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="far fa-trash-alt"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item delete-item">Confirmer</a>
                            <a class="dropdown-item">Annuler</a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-12 col-lg-6">
        <table class="table table-borderless border-left">
            <tbody>
                <tr>
                    <th scope="row">{{ form_label(form.status) }}</th>
                    <td>
                        {{ form_errors(form.status) }}
                        {{ form_widget(form.status) }}
                        {{ form_help(form.status) }}
                    </td>
                </tr>
                <tr>
                    <th scope="row">{{ form_label(form.deliveryTime) }}</th>
                    <td>
                        {{ form_errors(form.deliveryTime) }}
                        {{ form_widget(form.deliveryTime) }}
                        {{ form_help(form.deliveryTime) }}
                    </td>
                </tr>
                <tr>
                    <th scope="row">{{ form_label(form.deliveryPoint) }}</th>
                    <td>
                        {{ form_errors(form.deliveryPoint) }}
                        {{ form_widget(form.deliveryPoint) }}
                        {{ form_help(form.deliveryPoint) }}
                    </td>
                </tr>
            </tbody>
        </table>
    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}

<script type="text/javascript">
document.querySelectorAll('.delete-item').forEach(function(item) {
    console.log(item);
    item.addEventListener('click', function(e) {
        e.currentTarget.closest('tr').remove();
    })
})
</script>
